doctype
html( lang="en" )
  head
    include ../partials/head.pug
  body
    include ../partials/header.pug
    main(class="container")
      div(class="col-md-8 col-lg-5 mx-auto")
        form(action="/api/productos" method="post")
          fieldset(class="card")
            div(class="card-header bg-success text-light")="Ingresa un nuevo producto"
            div(class="card-body")
              div(class="mb-3")
                label(for="title" class="form-label")="Titulo"
                input(type="text" name="title" id="title" class="form-control")
              div(class="mb-3")
                label(for="price" class="form-label")="Precio"
                input(type="number" name="price" id="price" class="form-control")
              div(class="mb-3")
                label(for="thumbnail" class="form-label")="Nombre de la imagen"
                input(type="text" name="thumbnail" id="thumbnail" class="form-control")
              input(type="hidden" name="form" value="1")
              button(class="btn btn-primary btn-lg float-right mt-3")="Agregar producto"
